#!/bin/sh

DIR=`realpath $0`
cd `dirname $DIR`

M1=12348
M2=12349

./make_sandbox $M1
./make_sandbox $M2

# Slave 2nd master to first master
/tmp/$M2/use -e "change master to master_host='127.0.0.1', master_log_file='mysql-bin.000001', master_log_pos=0, master_user='msandbox', master_password='msandbox', master_port=$M1"
/tmp/$M2/use -e "start slave"

# Slave master to 2nd master
/tmp/$M1/use -e "change master to master_host='127.0.0.1', master_log_file='mysql-bin.000001', master_log_pos=0, master_user='msandbox', master_password='msandbox', master_port=$M2"
/tmp/$M1/use -e "start slave"
