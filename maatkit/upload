#!/bin/sh

set -e
set -u

VER=`grep Revision packlist | head -n 1 | awk '{print $2}'`

./googlecode_upload.py -p maatkit -s "tarball release $VER" \
   -u baron.schwartz -l Featured release/maatkit-$VER.tar.gz;

./googlecode_upload.py -p maatkit -s "zip release $VER" \
   -u baron.schwartz -l Featured release/maatkit-$VER.zip;

./googlecode_upload.py -p maatkit -s ".deb release $VER" \
   -u baron.schwartz -l Featured release-debian/maatkit_$VER-1_all.deb;

./googlecode_upload.py -p maatkit -s ".rpm release $VER" \
   -u baron.schwartz -l Featured release-rpm/RPMS/noarch/maatkit-$VER-1.noarch.rpm;
